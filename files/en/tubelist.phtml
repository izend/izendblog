<?php $lang ='en'; ?>
<?php
$dir=ROOT_DIR . DIRECTORY_SEPARATOR . 'files' . DIRECTORY_SEPARATOR . 'tubes' . DIRECTORY_SEPARATOR . $lang;

$thumbs=glob($dir . DIRECTORY_SEPARATOR . '*.jpg');

if (!$thumbs) {
	return false;
}

shuffle($thumbs);

$tubes=array();
foreach ($thumbs as $file) {
	$tubes[]=basename($file, '.jpg');
}
$dir='/files/tubes/' . $lang;
?>
<div id="tubelist" class="gallery compact">
<?php foreach ($tubes as $name): ?>
<a class="yt" href="http://www.youtube.com/embed/<?php echo $name; ?>?autoplay=1&amp;autohide=2&amp;controls=1&amp;fs=0&amp;modestbranding=0&amp;showinfo=0&amp;rel=1&amp;theme=light&amp;color=white"><img src="<?php echo $dir; ?>/<?php echo $name; ?>.jpg" alt="" width="240" height="135" /></a>
<?php endforeach; ?>
</div>
