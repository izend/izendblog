<?php $lang ='fr'; ?>
<?php
$dir=ROOT_DIR . DIRECTORY_SEPARATOR . 'files' . DIRECTORY_SEPARATOR . 'tubes' . DIRECTORY_SEPARATOR . $lang;

$thumbs=glob($dir . DIRECTORY_SEPARATOR . '*.png');

if (!$thumbs) {
	return false;
}

