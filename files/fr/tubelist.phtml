$tubes=array();
foreach ($thumbs as $file) {
	$tubes[]=basename($file, '.png');
}
$dir='/files/tubes/' . $lang;
?>
<div class="gallery compact">
<?php foreach ($tubes as $name): ?>
<a class="yt" href="http://www.youtube.com/embed/<?php echo $name; ?>?autoplay=1&amp;autohide=2&amp;controls=1&amp;fs=0&amp;modestbranding=0&amp;showinfo=0&amp;rel=1&amp;theme=light&amp;color=white"><img src="<?php echo $dir; ?>/<?php echo $name; ?>.png" alt="" width="240px" height="135px" /></a>
<?php endforeach; ?>
</div>
